#include <iostream>
#include <cstdlib>
using namespace std; 
int main() {
    cout<<"Numeros que se usa: 10,7,8,10,6"<<endl;
    int n;
    cin>>n;
    float S=0;
    float DM=0;
    float vector[5]={10,7,8,10,6};
    for( int i=0 ; i<n ; i++){
        S=S+vector[i];
    } 
    int M=S/n;
    cout<<"promedio:"<<S/n<<endl;
    for( int j=0 ; j<n ; j++){
        DM=DM+abs(vector[j]-M);
    }
    cout<<"La DesviaciÃ³n Media es:"<<DM/n<<endl;

    return 0;
}
